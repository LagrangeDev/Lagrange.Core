FROM --platform=$BUILDPLATFORM mcr.microsoft.com/dotnet/sdk:8.0-alpine3.18 AS build-env
WORKDIR /App

ARG TARGETARCH

COPY . ./
RUN dotnet publish Lagrange.OneBot/Lagrange.OneBot.csproj \
        -c Release \
        -a $TARGETARCH \
        -o out \
        --no-self-contained \
        -p:PublishSingleFile=true \
        -p:IncludeContentInSingleFile=true \
	    --framework net8.0
		
FROM mcr.microsoft.com/dotnet/runtime:8.0-alpine3.18
COPY --from=build-env /App/out/ /root/bin/
# Now it will be generated by itself 
# COPY Lagrange.OneBot/Resources/appsettings.onebot.json /root/data/appsettings.json
WORKDIR /root/data
ENTRYPOINT ["/root/bin/Lagrange.OneBot"]
